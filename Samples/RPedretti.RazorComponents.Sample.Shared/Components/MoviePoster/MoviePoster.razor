@using RPedretti.RazorComponents.Shared.Components
@using RPedretti.RazorComponents.Input.Spinner
@inherits BaseAccessibleComponent

<div class="movie-poster_card"
     tabindex="0"
     @onclick="HandleClick"
     @onkeydown="(k => HandleKeyPress(k, HandleClick))">
    <div class="movie-poster_face">
        @if (Movie.Poster == "N/A")
        {
            <img class="poster-image -loaded -no-poster"
                 alt="@Movie.Title"
                 src="_content/rpedretti.razorcomponents.sample.shared/assets/poster-placeholder.png" />
            <p class="title--overlay" style="align-content: center">@Movie.Title</p>
        }
        else
        {
            if (!ImageLoaded)
            {
                <Spinner Active Centered></Spinner>
            }
            <img class="@($"poster-image {(ImageLoaded ? "-loaded" : null)}")"
                 alt="@Movie.Title"
                 src="@(ImageError ? "_content/rpedretti.razorcomponents.sample.shared/assets/poster-placeholder.png" : Movie.Poster)"
                 @onerror="UpdateError"
                 @onload="UpdateLoader" />
        }
    </div>
</div>